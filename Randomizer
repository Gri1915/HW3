package lab3;

import java.util.Collection;

public class Randomizer {
    public static boolean randomFillInt(Collection<Integer> collection, long numbers) {
    if (numbers <= 0)
    {
        return false;
    }
    for (int i = 0; i < numbers; i++) {
        collection.add((int)(Math.random() * 100));
    }
    return true;
}
    public static boolean randomFillDouble(Collection<Double> collection, long numbers) {
        if (numbers <= 0)
        {
            return false;
        }
        for (int i = 0; i < numbers; i++) {
            collection.add((Math.random() * 100));
        }
        return true;
    }
    public static String randomString(int maxLength) {
        String qwerty = "qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM";
        char[] str = new char[maxLength];
        for (int i = 0; i < maxLength; ++i){
            int p =(int) (Math.random() *1);
            if(p < 1){
                str[i] = qwerty.charAt((int) (Math.random() * 52));
            }
            else if (p > 0){
                str[i] = (char)(Math.random()*9);
            }

        }

        String res = str.toString();
        return res;
    }
}
